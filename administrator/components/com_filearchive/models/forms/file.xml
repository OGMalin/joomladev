<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true" class="readonly"
			description="JGLOBAL_FIELD_ID_DESC" /> 
		<field name="name" type="text"
			label="COM_FILEARCHIVE_FORM_LBL_FILE_NAME"
			description="COM_FILEARCHIVE_FORM_NAME_DESC"
			required="true"  /> 
		<field name="alias" type="text"
			label="JFIELD_ALIAS_LABEL"
			description="COM_FILEARCHIVE_FIELD_ALIAS_DESC" /> 
		<field name="description" type="textarea"
			label="COM_FILEARCHIVE_FORM_LBL_FILE_DESCRIPTION"
			description="COM_FILEARCHIVE_FORM_DESC_FILE_DESCRIPTION"
			cols="100"
			rows="8" />
		<field name="file" type="file"
			label="COM_FILEARCHIVE_FORM_LBL_FILE_FILE"
			description="COM_FILEARCHIVE_FORM_DESC_FILE_FILE"
			upload_directory="files" /> 
	</fieldset> 

	<fieldset name="accesscontrol">
		<field name="asset_id" type="hidden" filter="unset" />
		<field 	name="rules"
						type="rules"
						label="JFIELD_RULES_LABEL"
						translate_label="false"
						filter="rules"
						validate="rules"
						class="inputbox"
						component="com_filearchive"
						section="file" />
	</fieldset>
</form>
