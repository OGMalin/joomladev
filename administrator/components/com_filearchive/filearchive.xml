<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>com_filearchive</name>
	<creationDate>2014-01-10</creationDate>
	<copyright>Copyright (C) 2014. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<author>Odd Gunnar Malin</author>
	<authorEmail>oddg@sjakk.biz</authorEmail>
	<authorUrl>http://polarchess.net</authorUrl>
	<version>1.0.0</version>
	<description>COM_FILEARCHIVE_XML_DESCRIPTION</description>

	<!-- Kjøres under installering/oppdatering og avinstallering -->
	<scriptfile>script.php</scriptfile>

	<!-- Kjøres under installering -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<!-- Kjøres under avinstallering -->
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<files folder="site">
		<filename>index.html</filename>
	</files>

	<administration>
		<menu img="components/com_filearchive/assets/images/com_filearchive.png">COM_FILEARCHIVE_MENU</menu>
		<submenu>
			<menu link="option=com_filearchive&amp;view=files" view="files" img="components/com_filearchive/assets/images/files.png">COM_FILEARCHIVE_TITLE_FILES</menu>
		</submenu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>filearchive.php</filename>
			<folder>controllers</folder>
			<folder>assets</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>language</folder>
		</files>
	</administration>
</extension>