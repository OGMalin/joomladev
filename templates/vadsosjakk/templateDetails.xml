<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="template" client="site">
	<name>vadsosjakk</name>
	<version>1.0</version>
	<creationDate>2/12-2014</creationDate>
	<author>Odd Gunnar Malin</author>
	<authorEmail>oddg@sjakk.biz</authorEmail>
	<copyright>Copyright (C) 2014.</copyright>
	<description>TPL_VADSOSJAKK_XML_DESCRIPTION</description>
	<files>
		<filename>index.php</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>debug</position>
		<position>search</position>
		<position>navigation</position>
		<position>breadcrumb</position>
		<position>left</position>
		<position>right</position>
		<position>top</position>
		<position>above</position>
		<position>below</position>
		<position>bottom</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_vadsosjakk.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_vadsosjakk.sys.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.tpl_vadsosjakk.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.tpl_vadsosjakk.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="datebanner"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_VADSOSJAKK_DATEBANNER_LABEL"
					description="TPL_VADSOSJAKK_DATEBANNER_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="menulogin"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_VADSOSJAKK_MENULOGIN_LABEL"
					description="TPL_VADSOSJAKK_MENULOGIN_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="menusite"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_VADSOSJAKK_MENUSITE_LABEL"
					description="TPL_VADSOSJAKK_MENUSITE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="leftsize" type="integer" default="3"
					label="TPL_VADSOSJAKK_LEFTSIZE_LABEL"
					description="TPL_VADSOSJAKK_LEFTSIZE_DESC"
					first="0" last="12" step="1" />
				<field name="rightsize" type="integer" default="3"
					label="TPL_VADSOSJAKK_RIGHTSIZE_LABEL"
					description="TPL_VADSOSJAKK_RIGHTSIZE_DESC"
					first="0" last="12" step="1" />
			</fieldset>
		</fields>
	</config>
</extension>
